<%= form_for @product, :html => { :class => "form-horizontal product" } do |f| %>

  <% if @product.errors.any? %>
    <div id="error_expl" class="panel panel-danger">
      <div class="panel-heading">
        <h3 class="panel-title"><%= pluralize(@product.errors.count, "error") %> prohibited this product from being saved:</h3>
      </div>
      <div class="panel-body">
        <ul>
        <% @product.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
        </ul>
      </div>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :description, :class => 'form-control', required: true %>
    </div>
    <%=f.error_span(:description) %>
  </div>
  <div class="form-group">
    <%= f.label :gst, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :gst, :class => 'form-control', required: true, onkeypress: 'return validateQty(event);' %>
    </div>
    <%=f.error_span(:gst) %>
  </div>
  <div class="form-group">
    <%= f.label :unit, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :unit, :class => 'form-control', required: true, onkeypress: 'return validateQty(event);' %>
    </div>
    <%=f.error_span(:unit) %>
  </div>
  <div class="form-group">
    <%= f.label :rate, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :rate, :class => 'form-control', required: true, onkeypress: 'return validateQty(event);' %>
    </div>
    <%=f.error_span(:rate) %>
  </div>
  <div class="form-group">
    <%= f.label :discount, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <%= f.text_field :discount, :class => 'form-control', required: true, onkeypress: 'return validateQty(event);'%>
    </div>
    <%=f.error_span(:discount) %>
  </div>
  <div class="form-group">
    <%= f.label :amount, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <% if @product.new_record? %>
        <%= f.text_field :amount, :class => 'form-control', required: true, onkeypress: 'return validateQty(event);'%>
      <% else %>
        <%= f.text_field :amount, :class => 'form-control', required: true, readonly: true %>
      <% end %>
    </div>
    <%=f.error_span(:amount) %>
  </div>
  <div class="form-group">
    <%= f.label :final_amount, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <% if @product.new_record? %>
        <%= f.text_field :final_amount, :class => 'form-control', required: true, onkeypress: 'return validateQty(event);' %>
      <% else %>
        <%= f.text_field :final_amount, :class => 'form-control', required: true, readonly: true %>
      <% end %>
    </div>
    <%=f.error_span(:final_amount) %>
  </div>
  <div class="form-group">
    <%= f.label :single_price_rate, :class => 'control-label col-lg-2' %>
    <div class="col-lg-10">
      <% if @product.new_record? %>
        <%= f.text_field :single_price_rate, :class => 'form-control', required: true, onkeypress: 'return validateQty(event);' %>
      <% else %>
        <%= f.text_field :single_price_rate, :class => 'form-control', required: true, readonly: true %>
      <% end %>
    </div>
    <%=f.error_span(:single_price_rate) %>
  </div>

  <div class="form-group">
    <div class="col-lg-offset-2 col-lg-10">
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                products_path, :class => 'btn btn-default' %>
    </div>
  </div>

<% end %>
